{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "package.json", "tsconfig.json", "vitest.config.ts"],
      "passThroughEnv": [
        "MIZZLE_CONFIG",
        "MIZZLE_REGION",
        "MIZZLE_ENDPOINT",
        "MIZZLE_SCHEMA",
        "MIZZLE_OUT",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION"
      ]
    },
    "lint": {
      "inputs": ["src/**", "test/**", ".eslintrc.cjs", "package.json", "tsconfig.json"]
    },
    "lint:root": {
      "inputs": ["src/**", "test/**", ".eslintrc.cjs", "package.json", "tsconfig.json"]
    },
    "check": {
      "inputs": ["src/**", "test/**", "package.json", "tsconfig.json"]
    },
    "check:root": {
      "inputs": ["src/**", "test/**", "package.json", "tsconfig.json"]
    }
  }
}
