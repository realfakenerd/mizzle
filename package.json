{
    "name": "mizzle",
    "module": "src/index.ts",
    "type": "module",
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "bin": {
        "mizzle": "src/cli.ts"
    },
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test",
        "check": "turbo run check && bun run check:root",
        "check:root": "tsc --noEmit",
        "lint": "turbo run lint && bun run lint:root",
        "check:turbo": "turbo run check check:root",
        "lint:turbo": "turbo run lint lint:root",
        "lint:root": "eslint \"test/**/*.ts\""
    },
    "packageManager": "bun@1.3.5",
    "devDependencies": {
        "@aws-sdk/client-dynamodb": "^3.962.0",
        "@aws-sdk/lib-dynamodb": "^3.962.0",
        "@mizzle/eslint-config": "workspace:*",
        "@mizzle/shared": "workspace:*",
        "@mizzle/tsconfig": "workspace:*",
        "@types/bun": "latest",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^8.57.1",
        "eslint-plugin-turbo": "latest",
        "mizzle": "workspace:*",
        "tsx": "^4.21.0",
        "turbo": "^2.7.3",
        "vitest": "^4.0.16"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@aws-sdk/credential-provider-ini": "^3.964.0",
        "@clack/prompts": "^0.11.0",
        "commander": "^14.0.2",
        "uuid": "^13.0.0"
    }
}
